#include <stdio.h>
#include <stdlib.h>
#include <string.h>


#define LINESIZE 512
#define LINENUM 24

void do_more(FILE *);
int see_more(FILE *);


int main(int ac, char *av[])
{
  FILE *fp;
  
  if (ac == 1)
    do_more(stdin);
  else
    while (--ac)
      if ((fp = fopen(*++av, "r")) != NULL) {
        do_more(fp);
        fclose(fp);
      }
      else
        exit(1);

  return 0;
}

void do_more(FILE *fp)
{
  char line[LINESIZE];
  int num_of_lines, reply;
  int see_more(FILE *);

  FILE *fp_tty;
  fp_tty = fopen("/dev/tty", "r");

  if (fp_tty == NULL)
    exit(1);

  while (fgets(line, LINESIZE, fp)) {
    if (num_of_lines == LINENUM) {
      reply = see_more(fp_tty);
      if (reply = 0)
        break;
      num_of_lines -= reply;
    }

    if (fputs(line, stdout) == EOF)
      exit(1);

    num_of_lines++;
  }
}


int see_more(FILE *cmd)
{
  int c;
  while ((c = getc(cmd)) != EOF) {
    if (c == 'q')
      return 0;
    if (c == ' ')
      return LINENUM;
    if (c == '\n')
      return 1;
  }
}
